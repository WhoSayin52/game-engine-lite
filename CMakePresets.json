{
	"version": 10,
	"configurePresets": [
		{
			"name": "default",
			"displayName": "g++ Ninja Multi-Config",
			"generator": "Ninja Multi-Config",
			"binaryDir": "${sourceDir}/build",
			"cacheVariables": {
				"CMAKE_CXX_FLAGS": "-pedantic-errors -Wall -Wextra -Wconversion -Wsign-conversion -Werror -Weffc++",
				"CMAKE_CXX_FLAGS_DEBUG": "-O0 -ggdb",
				"CMAKE_CXX_FLAGS_RELEASE": "-O2 -DNDEBUG"
			}
		}
	]
}
